<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<ImageView
	    android:id="@+id/fpiImage"
	    android:layout_width="32dp"
	    android:layout_height="32dp"
	    
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true"
	    
	    android:src="@drawable/ic_dxx_gray"
	    />
    
	<TextView style="@style/FolderItem.Name"
        android:id="@+id/fpiName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:layout_toRightOf="@+id/fpiImage"
        android:layout_alignParentTop="true"
        
        android:text="@string/app_name"
		/>

    <TextView style="@style/FolderItem.Description"
        android:id="@+id/fpiDescription"
        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:layout_toRightOf="@+id/fpiImage"
        android:layout_below="@+id/fpiName"
        
        android:text="@string/app_name"
        />
    
</RelativeLayout>
