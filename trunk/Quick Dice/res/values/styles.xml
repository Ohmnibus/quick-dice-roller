	<style name="Base">
	</style>

	<!-- Main Container -->
	<style name="Base.MainContainer">
		<!-- <item name="android:background">@color/base_main_background</item> -->
		<!-- <item name="android:background">?android:attr/colorBackground</item> -->
		<item name="android:background">?android:attr/windowBackground</item>
	</style>

	<!-- Logo -->
	<style name="Base.LoKLogo">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">0dp</item>
		
		<item name="android:visibility">gone</item>
	</style>
	
	<!-- Last Roll -->
	<style name="Base.LastRoll">
		<item name="android:paddingTop">2dp</item>
		<item name="android:paddingBottom">2dp</item>
		<item name="android:paddingLeft">2dp</item>
		<item name="android:paddingRight">2dp</item>
		<item name="android:background">?attr/ohmFramedBackgroundSelector</item>
	</style>
	
	<!-- Roll list -->
	<style name="Base.RollList">
		<item name="android:stretchMode">columnWidth</item>
		<item name="android:gravity">center</item>
	</style>
	
	<!-- Resize Handle -->
	<style name="Base.ResizeHandle">
		<item name="android:padding">@dimen/handle_padding</item>

		<item name="android:background">@color/base_handle_solid_color</item>
	</style>
	
	<style name="Base.ResizeHandle.Horizontal">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/handle_size</item>
		
		<item name="android:src">@drawable/ic_handle_img_hori</item>
	</style>
	
	<style name="Base.ResizeHandle.Vertical">
		<item name="android:layout_width">@dimen/handle_size</item>
		<item name="android:layout_height">match_parent</item>
		
		<item name="android:src">@drawable/ic_handle_img_vert</item>
	</style>
	
	<!-- Dice grid -->
	<style name="Base.DiceGrid">
		<item name="android:columnWidth">72dp</item>
		<item name="android:numColumns">auto_fit</item>
		<item name="android:verticalSpacing">4dp</item>
		<item name="android:horizontalSpacing">4dp</item>
		<item name="android:stretchMode">columnWidth</item>
		<item name="android:gravity">center</item>
		<!-- <item name="android:background">@drawable/bg_dice_grid</item> -->
		<item name="android:background">?attr/ohmFramedBackground</item>
	</style>
	
	<!-- Modifiers -->
	<style name="Base.Modifiers">
		<!-- <item name="android:background">@drawable/bg_dice_grid</item> -->
		<item name="android:background">?attr/ohmFramedBackground</item>
	</style>
	
	<!-- Dice Bag Drawer -->
	<style name="Base.Drawer">
		<item name="android:background">?android:attr/windowBackground</item>
	</style>
	
	<style name="Base.Drawer.DiceBag">
		<item name="android:divider">@android:color/transparent</item>
		<item name="android:dividerHeight">0dp</item>
		<!-- <item name="android:background">@color/base_main_background</item> -->
		<!-- <item name="android:background">?android:attr/colorBackground</item> -->
	</style>
	
