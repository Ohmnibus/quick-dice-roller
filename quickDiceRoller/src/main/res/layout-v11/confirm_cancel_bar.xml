<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/ButtonPanel.Container"
	>
	<View style="@style/ButtonPanel.Divider.Horizontal"
		android:id="@+id/vwDividerHorizontal"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/vwDividerHorizontal"
		
		android:orientation="horizontal"
		>
		<!-- From API 11 Confirm/Cancel buttons are inverted -->
		<Button style="@style/ButtonPanel.Button"
			android:id="@+id/btuBarCancel"
			
			android:layout_weight="1"
			android:text="@string/lblCancel" />
		
		<View style="@style/ButtonPanel.Divider.Vertical"
			android:id="@+id/vwDivider"
			/>
		
		<Button style="@style/ButtonPanel.Button"
			android:id="@+id/btuBarConfirm"
			
			android:layout_weight="1"
			
			android:text="@string/lblConfirm" />
	</LinearLayout>
</RelativeLayout>