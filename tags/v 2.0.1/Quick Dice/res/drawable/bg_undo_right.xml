<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
	>
	<item android:state_pressed="true">
		<shape
			android:shape="rectangle" >
		
			<solid
				android:color="@color/undo_bar_bg_pressed"
				/>
		
			<corners
				android:bottomRightRadius="@dimen/undo_bar_corner_radius"
				android:topRightRadius="@dimen/undo_bar_corner_radius"
				/>
		
		</shape>
	</item>
	<item>
		<shape
			android:shape="rectangle" >
		
			<solid
				android:color="@color/undo_bar_bg"
				/>
		
			<corners
				android:bottomRightRadius="@dimen/undo_bar_corner_radius"
				android:topRightRadius="@dimen/undo_bar_corner_radius"
				/>
		
		</shape>
	</item>
</selector>